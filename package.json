		"@types/react-dom": "^18.2.7",
		"@types/react-router-dom": "^5.3.3",
		"axios": "^1.8.2",
		"chart.js": "^4.4.0",
		"react": "^18.2.0",
		"react-chartjs-2": "^5.2.0",
		"react-dom": "^18.2.0",
